@model IEnumerable<DoAn.Models.BlogCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper-box" style="padding:7rem">
    <div class="toolBar-control">
        <button class="btn-create" onclick="window.location.href='/Admin/BlogCategory/Create'">
            Create new
        </button>
        <div class="wrap-search">
            <div class="search-staff">
                <div class="box-search">
                    <input type="text" value="" name="" id="" placeholder="Search BlogCategory ... ">
                    <button class="btnSearch-staff">Search</button>
                </div>
            </div>
        </div>
        <div></div>
    </div>
    <div class="table-infoStaff">
        <table class="table-List">
            <tr class="title-infoList">
                <th>BlogCategoryId</th>
                <th>Title</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
            <tbody class="box-tbody">
                @foreach (var item in Model)
                {
                    <tr class="item-infoList">
                        <td>@item.BlogCategoryId</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            <button class="btn-edit" onclick="navigateTo('Edit', @item.BlogCategoryId)">
                                Edit
                            </button>
                            <button class="btn-detail" onclick="navigateTo('Detail', @item.BlogCategoryId)">
                                Detail
                            </button>
                            <button class="btn-delete" onclick="deleteStaff(@item.BlogCategoryId)">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    function navigateTo(action, BlogCategoryId) {
        window.location.href = `/Admin/BlogCategory/${action}?BlogCategoryId=${BlogCategoryId}`;
    }

    function deleteStaff(BlogCategoryId) {
        if (confirm('Are you sure you want to delete this Combo?')) {
            navigateTo('Delete', BlogCategoryId);
        }
    }
</script>
