
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="loading-bar">
        <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
    </div>
        <div id="carouselExampleControls" style="padding:5rem 0" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/banner_Home.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/images/banner_home1.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src ="/images/banner_Home3.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
    </div>
    <script>
        window.addEventListener("load", function () {
            var loadingBar = document.querySelector(".loading-bar");
            loadingBar.style.display = "none";
        });
    </script>
</body>
</html>

<style>
    .loading-bar {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100px; /* Điều chỉnh kích thước của vòng tròn spinner theo ý muốn */
        height: 100px; /* Điều chỉnh kích thước của vòng tròn spinner theo ý muốn */
        background: rgba(255, 255, 255, 0.8); /* Màu nền của vòng tròn spinner */
        border-radius: 50%;
        text-align: center;
        z-index: 9999;
    }

        .loading-bar i {
            font-size: 3em;
            line-height: 100px; /* Điều chỉnh vị trí của biểu tượng spinner theo ý muốn */
            color: #3498db; /* Màu của biểu tượng spinner */
        }
</style>