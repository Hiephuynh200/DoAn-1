@section upload {
    <script>
        $(function () {
            // Ẩn thẻ ban đầu
            $('.error-indicator').hide();

            // Kiểm tra khi thay đổi các trường để hiển thị/ẩn thẻ
            $('input, select').on('change', function () {
                if ($('.text-danger:visible').length > 0) {
                    $('.error-indicator').show();
                } else {
                    $('.error-indicator').hide();
                }
            });

            // Xử lý sự kiện khi nút "Chọn ảnh" được click
            $('#btnUpload').click(function () {
                $('#fileUpload').trigger('click');
            });

            $('#fileUpload').change(function () {
                if (window.FormData !== undefined) {
                    var fileUpload = $('#fileUpload').get(0);
                    var files = fileUpload.files;
                    var formData = new FormData();
                    formData.append('file', files[0]);

                    $.ajax({
                        type: 'POST',
                        url: '/Admin/Staff/ProcessUpload',
                        contentType: false,
                        processData: false,
                        data: formData,
                        success: function (urlImage) {
                            $('#pictureUpload').attr('src', urlImage);
                            $('#Avatar').val(urlImage);

                            // Hiển thị nút khi có hình ảnh
                            $('#btnUpload').show();
                        },
                        error: function (err) {
                            alert('Error: ' + err.statusText);
                        }
                    });
                }
            });
        });
    </script>
}

