@model IEnumerable<DoAn.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper-box" style="padding:7rem">
    <div class="toolBar-control">
        <button class="btn-create" onclick="window.location.href='/Admin/Product/Create'">
            Create new
        </button>

        <div class="wrap-search">
            <div class="search-staff">
                <div class="box-search">
                    <input type="text" value="" name="" id="" placeholder="Search products ... ">
                    <button class="btnSearch-staff"> Search</button>
                </div>
            </div>
        </div>

        <div></div>
    </div>
    <div class="table-infoStaff">
        <table class="table-List">
            <tr class="title-infoList">
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quanlity</th>
                <th>Image</th>
                <th>product Type</th>
                <th>Provider</th>
                <th>Create At</th>
                <th>Update At</th>
                <th>Create By</th>
                <th>Update By</th>
                <th>Action</th>
            </tr>

            <tbody class="box-tbody">
                @foreach (var item in Model)
                {
                    <tr class="item-infoList">
                        <td>@item.ProductId</td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            <img width="20px" src="@item.Image" />
                        </td>
                        <td>
                            @item.ProductType.Name
                        </td>
                        <td>
                            @item.Provider.Name
                        </td>
                        <td>@item.CreatedAt</td>
                        <td>@item.UpdatedAt</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.UpdatedBy</td>
                        <td>
                            <button class="btn-edit" onclick="navigateTo('Edit', @item.ProductId)">
                                Edit
                            </button>
                            <button class="btn-detail" onclick="navigateTo('Detail', @item.ProductId)">
                                Detail
                            </button>
                            <button class="btn-delete" onclick="deleteStaff(@item.ProductId)">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    function navigateTo(action, ProductId) {
        window.location.href = `/Admin/Product/${action}?ProductId=${ProductId}`;
    }

    function deleteStaff(ProductId) {
        if (confirm('Are you sure you want to delete this Product?')) {
            navigateTo('Delete', ProductId);
        }
    }
</script>
